# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{h,c,cc,cpp,cxx}]
indent_style = space
indent_size = 2

[*.{v,sv}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[makefile]
indent_style = tab
